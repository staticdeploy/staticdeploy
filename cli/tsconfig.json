{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "target": "es2017",
        // yarn (through lerna) hoist dependencies of all workspaces in the
        // project root. Since some @types packages conflict with each other
        // (for example jest and mocha, both defining global `beforeEach`), we
        // can't use the compiler's default behaviour of loading all @types
        // packages, and we need to manually specify the required ones
        // TODO: explore alternative approach when yarnpkg/yarn#4979 is resolved
        "types": [
            "@types/mocha",
            "@types/yargs"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "pretty": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    }
}
