{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "target": "es2017",
        // yarn (through lerna) hoist dependencies of all workspaces in the
        // project root. Since some @types packages conflict with each other
        // (for example jest and mocha, both defining global `beforeEach`), we
        // can't use the compiler's default behaviour of loading all @types
        // packages, and we need to manually specify the required ones
        // TODO: explore alternative approach when yarnpkg/yarn#4979 is resolved
        "types": [
            "@types/chai",
            "@types/chai-as-promised",
            "@types/fs-extra",
            "@types/lodash",
            "@types/mime",
            "@types/mocha",
            "@types/mz",
            "@types/recursive-readdir",
            "@types/tar",
            "@types/umzug",
            "@types/validator"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "pretty": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    }
}
