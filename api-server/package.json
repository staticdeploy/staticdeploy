{
  "name": "@staticdeploy/api-server",
  "description": "staticdeploy api server",
  "version": "0.0.0",
  "private": true,
  "main": "build/server.js",
  "license": "MIT",
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/staticdeploy.git"
  },
  "bugs": {
    "url": "https://github.com/staticdeploy/staticdeploy/issues"
  },
  "scripts": {
    "compile": "rimraf build && tsc",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:tslint",
    "test": "TS_NODE_TYPE_CHECK=true NODE_ENV=test NODE_PATH=src mocha --exit -t 5000 -r ts-node/register --watch-extensions ts 'test/**/*.ts'",
    "start": "NODE_ENV=production NODE_PATH=build node build/server.js"
  },
  "dependencies": {
    "@mondora/env": "^1.0.4",
    "@staticdeploy/storage": "^0.0.0",
    "bunyan": "^1.8.12",
    "bunyan-middleware": "^0.8.0",
    "convexpress": "^2.2.0",
    "express": "^4.16.2",
    "express-healthchecker": "^1.0.0",
    "express-jwt": "^5.3.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.3",
    "@types/chai": "^4.0.5",
    "@types/chai-fuzzy": "^1.3.30",
    "@types/express": "^4.0.39",
    "@types/express-jwt": "^0.0.38",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.85",
    "@types/mocha": "^2.2.44",
    "@types/sinon": "^4.1.2",
    "@types/supertest": "^2.0.3",
    "chai": "^4.1.2",
    "chai-fuzzy": "^1.6.1",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.3",
    "supertest": "^3.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.1"
  }
}
